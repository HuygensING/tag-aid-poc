.text
	bottom 0
	left 0
	position absolute
	right 0
	top 50%
	.reading
		margin-left 25%
		width 50%
		font-size 0.8em
		line-height 1.5em
		color #989898
		height 100%
		overflow-y auto
		span
			cursor pointer
			&.visible
				color #008a23
				font-weight bold
			&:hover
				background-color  #ddf

	ul
		height 100%
		overflow-y auto
		font-family sans-serif
		font-size 0.8em
		color white
		margin 0
		list-style none
		padding 0
		float right
		width 25%
		li
			margin 0 auto
			border-radius 4px
			background-color #7b9fd1
			display block
			padding 6px
			width 60px
			margin-bottom 6px
			cursor pointer
			&.selected
				background-color #7a4dff
			&:hover
				background-color #aaf