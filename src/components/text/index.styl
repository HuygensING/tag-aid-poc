.text
	bottom 0
	left 0
	position absolute
	right 0
	top 50%
	.reading
		height calc(100% - 60px)
		overflow-y auto
		span
			cursor pointer
			&:hover
				background-color  #ddf

	ul
		height 60px
		margin 0
		list-style none
		padding 0
		li
			display inline-block
			padding 4px
			border 1px solid black
			cursor pointer
			&.selected
				background-color #aaf
			&:hover
				background-color #ddf